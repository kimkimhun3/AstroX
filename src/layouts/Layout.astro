---
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar.astro";
import Under from "@components/under.astro";
import "@fontsource/inter/variable.css";
import { checkImageUrl } from "@utils/all";
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  desc?: string;
  ogimage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const { title, desc, ogimage = "/opengraph.jpg" } = Astro.props;

const resolvedOGImage = checkImageUrl(ogimage, Astro.site);

const makeTitle = title
  ? title + " | " + "hoooon"
  : "Hoooon";
---

<!DOCTYPE html>
<html lang="jap">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <SEO
      title={makeTitle}
      description={desc ||
        "Blog Starter Template built with Astro & MDX."}
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Stablo - Blog Starter Template for Astro`,
          image: resolvedOGImage,
        },
        image: {
          alt: "Stablo Screenshot",
        },
      }}
    />
  </head>
  <body>
    <!-- <Navbar /> -->
    <slot />

    <Footer />
    <Under/>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
